<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MaterialDetailsFragment"
    android:background="#DCECFA">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matdetails_guidex1"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.15"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matdetails_guidex2"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.3"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matdetails_guidex3"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.45"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matdetails_guidex4"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.6"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matdetails_guidex5"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.75"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matdetails_guidey1"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="0dp"
            app:layout_constraintGuide_percent="0.4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex1"
            android:text="Material Details"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/matcode_heading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/matdetails_guidey1"
            app:layout_constraintTop_toTopOf="@id/matdetails_guidex1"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex2"
            android:text="Code :"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/matcode_details"
            app:layout_constraintLeft_toLeftOf="@id/matdetails_guidey1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/matdetails_guidex1"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex2"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/matnamee_heading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/matdetails_guidey1"
            app:layout_constraintTop_toTopOf="@id/matdetails_guidex2"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex3"
            android:text="Name :"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/matname_details"
            app:layout_constraintLeft_toLeftOf="@id/matdetails_guidey1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/matdetails_guidex2"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex3"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/matunit_heading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/matdetails_guidey1"
            app:layout_constraintTop_toTopOf="@id/matdetails_guidex3"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex4"
            android:text="Unit :"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/matunit_details"
            app:layout_constraintLeft_toLeftOf="@id/matdetails_guidey1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/matdetails_guidex3"
            app:layout_constraintBottom_toTopOf="@id/matdetails_guidex4"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"/>

