<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasklist_guidey1"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.1"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasklist_guidey2"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.7"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasklist_guidey3"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp"
        app:layout_constraintGuide_percent="0.9"/>

    <CheckBox
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/task_checkbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tasklist_guidey1"
        android:layout_marginLeft="5dp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@id/tasklist_guidey1"
        app:layout_constraintRight_toRightOf="@id/tasklist_guidey1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#909090"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/task_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tasklist_guidey1"
        app:layout_constraintRight_toLeftOf="@id/tasklist_guidey2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@id/tasklist_guidey2"
        app:layout_constraintRight_toRightOf="@id/tasklist_guidey2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#909090"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/task_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tasklist_guidey2"
        app:layout_constraintRight_toLeftOf="@id/tasklist_guidey3"
        android:textSize="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toLeftOf="@id/tasklist_guidey3"
        app:layout_constraintRight_toRightOf="@id/tasklist_guidey3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#909090"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/taskInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tasklist_guidey3"
        android:src="@drawable/info"
        app:layout_constraintWidth_percent="0.07"/>

</android.support.constraint.ConstraintLayout>